<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/acitivity_horizontal_margin"
    android:paddingRight="@dimen/acitivity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvPanjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panjang"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/editPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="numberDecimal"
        android:textSize="32sp"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/tvLebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lebar"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"
        />
    <EditText
        android:id="@+id/editLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="numberDecimal"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitung"
        android:textSize="32sp" />

</LinearLayout>